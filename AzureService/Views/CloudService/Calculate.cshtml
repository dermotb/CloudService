@model AzureService.Models.CloudService

@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate</h1>

<h4>CloudService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoInstances" class="control-label"></label>
                <input asp-for="NoInstances" class="form-control" />
                <span asp-validation-for="NoInstances" class="text-danger"></span>
            </div>
            <div class="editor-field">
                Size @Html.DropDownList("InstanceSize")
<!--                <label asp-for="InstanceSize" class="control-label"></label>
                <input asp-for="InstanceSize" class="form-control" />
                <span asp-validation-for="InstanceSize" class="text-danger"></span>
                -->
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
